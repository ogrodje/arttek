        div.container {
            max-width: 800px;
            margin: 0 auto;
        }

        .episode {

        }

        .episode .airedAt:after {
            content: '/';
            padding-left: 10px;
            padding-right: 10px;
        }

        .episode .people {
            display: inline-block;
            margin-top: 10px;
        }

        .tag {
            background-color: #333;
            border-radius: 4px;
            padding-left: 5px;
            padding-right: 5px;
        }

        .episode .people ul,
        .episode .people li {
            margin: 0;
            padding: 0;
        }

        .episode .people ul {
            list-style: none;
            float: none;
            clear: both;
        }

        .episode .people li {
            display: inline-block;
            height: 40px;
            line-height: 40px;
        }

        .episode .people li:not(:last-child):after {
            content: '/';
            padding-left: 10px;
            padding-right: 10px;
        }

        .episode .people .person {
            margin: 0;
            padding-left: 50px;
            position: relative;
        }

        .episode .people img {
            background: #3A6F9A;
            max-width: 40px;
            max-height: 40px;
            top: 0px;
            left: 0px;
            position: absolute;
        }

        .episodes {

        }
        .episodes ul,
        .episodes li {
            list-style: none;
        }

        .episodes .episode {
            padding-bottom: 18px;
            position: relative;
            color: #666;
        }

        .episodes .episode .title {
            font-size: 20pt;
            line-height: 25pt;
            font-weight: 100;
        }

        .episodes .episode .title a .name {
            color: white;
        }

        .episodes .episode .topics {
            display: inline-block;
        }

        .episodes .episode .topics span:not(:last-child):after {
            content: ',';
            padding-left: 0px;
            padding-right: 5px;
        }
    </style>
</head>
